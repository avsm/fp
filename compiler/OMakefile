.PHONY: clean

OCAMLFLAGS    += -dtypes

GEN_FILES = parser.mli parser.ml lexer.ml
OCamlGeneratedFiles($(GEN_FILES))
FP_FILES[] =
    ast
    asttypes
    codegen
    config
    dependency
    env
    fpc
    graph
    ident
    lexer
    location
    parser
    patternmatch
    types
    typing
    util


FP = fp
FP_COMPILER = $(OCamlProgram $(FP), $(FP_FILES))

.DEFAULT: $(FP_COMPILER)

clean:
    rm -f $(filter-proper-targets $(ls R, .)) *.annot *.spot
